<p id="notice"><%= notice %></p>

<link rel="stylesheet" type="text/css/scss" href="products.scss">
    <%= stylesheet_link_tag 'application', 'data-turbolinks-track' => true %>

<div class="container-fluid" id="productheader">
  <div class="container-header">
    <h1>All our products</h1>
  </div>
    
  <div class="container-fluid">
    <% @products.each do |product| %>
    <div class="row" id="productrow">
      <div class="col-md-4 col-xs-6">
        <div class="product-container">
          <p>Outdoor Tents</p><br>
          <p>Find your best outdoor tents right here!</p>
            <div class="image">
              <%= image_tag("tent.jpg") %> <img id="tent">
            </div>
            <div class="products-ref"> 
              <p><!-- <a href="/products/show.html.erb">Show</a> -->
                <%= link_to 'Show', product %>
                    <!-- <a href="/products/edit.html.erb">Edit</a> -->
                <%= link_to 'Edit', edit_product_path(product) %>
                    <%= link_to 'Cancel', product, method: :delete, data: { confirm: 'Are you sure?' } %>
              </p>
            </div>
          <hr>
          <div class="show-index-price">
          <p> $98.00 and up</p>
          </div>
        </div>
      </div>

      <div class="col-md-4 col-xs-6">
        <div class="product-container">
          <p>Hammocks</p><br>
          <p>The best outdoor hammocks</p>
            <div class="image">
              <%= image_tag("hammock-1.jpeg") %> <img id="hammock">
            </div>
            <div class="products-ref">
                <p><!-- <a href="/products/show.html.erb">Show</a> -->
                  <%= link_to 'Show', product %>
                  <!-- <a href="/products/edit.html.erb">Edit</a> -->
                  <%= link_to 'Edit', edit_product_path(product) %>
                  <%= link_to 'Cancel', product, method: :delete, data: { confirm: 'Are you sure?' } %>
                </p>
            </div>
          <hr>
          <div class="show-index-price">
            <p> From $50.00 and up</p>
          </div>
        </div>
      </div>
    </div> <!-- <end row> -->
  </div> <!-- - end container> -->



<br>

<%= link_to 'New Product', new_product_path %>

<% end %>


