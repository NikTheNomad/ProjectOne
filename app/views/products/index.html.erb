   <div class="container-fluid">
    <div class="row" id="productrow">
      <div class="col-lg-4 col-md-4 col-xs-6">
        <div class="product-container">
          <p>Outdoor Tents</p><br>
          <p>Find your best outdoor tents right here!</p>
            <div class="image">
              <%= image_tag("tent.jpg") %> <img id="tent">
            </div>
            <div class="products-ref"> 
               <% @products.each do |product| %>
                <p><%= link_to 'Show', product %>
                  <%= link_to 'Edit', edit_product_path(product) %>
                  <%= link_to 'Cancel', product, method: :delete, data: { confirm: 'Are you sure?' } %>
                </p>
                <% end %>
            </div>
          <hr>
          <div class="show-index-price">
          <p> $98.00 and up</p>
          </div>
        </div>
        <%= link_to 'New Product', new_product_path %>
      </div>
  
      <div class="col-lg-4 col-md-4 col-xs-6">
        <div class="product-container">
          <p>Hammocks</p><br>
          <p>The best outdoor hammocks</p>
            <div class="image">
              <%= image_tag("hammock-1.jpeg") %> <img id="hammock">
            </div>
            <div class="products-ref">
               <% @products.each do |product| %>
                <p><!-- <a href="/products/show.html.erb">Show</a> -->
                  <%= link_to 'Show', product %> 
                  <%= link_to 'Edit', edit_product_path(product) %>
                  <%= link_to 'Cancel', product, method: :delete, data: { confirm: 'Are you sure?' } %>
                </p>
                <% end -%>
            </div>
          <hr>
          <div class="show-index-price">
            <p> From $50.00 and up</p>
          </div>
        </div>
        <%= link_to 'New Product', new_product_path %>
      </div>
    </div> <!-- <end row> -->
  </div> <!-- - end container> -->


